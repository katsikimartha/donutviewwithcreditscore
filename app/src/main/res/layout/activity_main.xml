<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.myapplication.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ProgressBar
            android:id="@+id/progress_bar_total_Score"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="100"
            android:padding="@dimen/padding_small"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle"
            tools:progress="100"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/progress_bar_credit_score"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:padding="@dimen/padding_xxlarge"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle_progress"
            tools:progress="60"
            android:progress="@{viewModel.mainUIModel.creditScorePercentage}"
            app:layout_constraintTop_toTopOf="@id/progress_bar_total_Score"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar_total_Score"
            app:layout_constraintStart_toStartOf="@id/progress_bar_total_Score"
            app:layout_constraintEnd_toEndOf="@id/progress_bar_total_Score"/>

        <TextView
            android:id="@+id/textview_your_credit_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/your_credit_score_is"
            android:gravity="center"
            android:textSize="@dimen/text_large"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/progress_bar_credit_score"
            app:layout_constraintStart_toStartOf="@id/progress_bar_credit_score"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/textview_credit_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_xxl"
            tools:text="300"
            android:text="@{viewModel.mainUIModel.creditScore}"
            android:layout_margin="@dimen/margin_large"
            android:textColor="@android:color/holo_orange_light"
            app:layout_constraintEnd_toEndOf="@id/progress_bar_credit_score"
            app:layout_constraintStart_toStartOf="@id/progress_bar_credit_score"
            app:layout_constraintTop_toBottomOf="@id/textview_your_credit_score" />

        <TextView
            android:id="@+id/textview_out_of"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="out of 700"
            android:text="@{viewModel.mainUIModel.totalScore}"
            android:layout_marginTop="@dimen/margin_large"
            android:textSize="@dimen/text_large"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@id/progress_bar_credit_score"
            app:layout_constraintStart_toStartOf="@id/progress_bar_credit_score"
            app:layout_constraintTop_toBottomOf="@id/textview_credit_score" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>